{
    "version": "2.0.0",
    "options": {
        "env": {
            "platform": "MIRA_PLATFORM_ORBIS_BSD_672",
            "checks": ""
        }
    },
    "tasks": [
        {
            "label": "Build Mira",
            "type": "shell",
            "command": "MIRA_PLATFORM=$platform make clean;MIRA_PLATFORM=$platform make create;MIRA_PLATFORM=$platform MIRA_CHECKS=$checks pvs-studio-analyzer trace -- make",
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ],
            "options": {
                "cwd": "${workspaceFolder}/kernel"
            },
            "dependsOn": [
                "Build trainer_loader"
            ]
        },
        {
            "label": "Build MiraLoader",
            "type": "shell",
            "command": "MIRA_PLATFORM=$platform make clean;MIRA_PLATFORM=$platform make create;MIRA_PLATFORM=$platform MIRA_CHECKS=$checks make",
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ],
            "options": {
                "cwd": "${workspaceFolder}/loader"
            },
            "dependsOn": [
                "Build Mira"
            ]
        },
        {
            "label": "Build trainer_loader",
            "type": "shell",
            "command": "MIRA_PLATFORM=$platform make clean;MIRA_PLATFORM=$platform make create;MIRA_PLATFORM=$platform MIRA_CHECKS=$checks make",
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ],
            "options": {
                "cwd": "${workspaceFolder}/trainer_loader"
            }
        },
        {
            "label": "Build mira_module",
            "type": "shell",
            "command": "MIRA_PLATFORM=$platform make clean;MIRA_PLATFORM=$platform make create;MIRA_PLATFORM=$platform MIRA_CHECKS=$checks make",
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ],
            "options": {
                "cwd": "${workspaceFolder}/mira_module"
            }
        },
        {
            "label": "Build Daemon",
            "type": "shell",
            "command": "make clean; make",
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ],
            "options": {
                "cwd": "${workspaceFolder}/daemon"
            }
        },
        {
            "label": "Build Daemon (PC)",
            "type": "shell",
            "command": "PLATFORM=Linux make clean; PLATFORM=Linux make",
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ],
            "options": {
                "cwd": "${workspaceFolder}/daemon"
            }
        },
        {
            "label": "Build Everything",
            "type": "shell",
            "command": "echo Build Everything",
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ],
            "dependsOn": [
                "Build Mira",
                "Build mira_module"
            ]
        }
    ]
}